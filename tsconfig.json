{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "outDir": "lib",
    "sourceMap": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts"]
}
